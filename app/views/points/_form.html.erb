<%= form_for [@group,@member,@point], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.hidden_field :group_id,  :value => @point.group_id %>
  <%= f.hidden_field :member_id, :value => @point.member_id %>

  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :value, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
