<%- model_class = Point -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @point.value %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              group_point_path(@point),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%= link_to t('.check_results', :default => t("helpers.links.check the results")),
              check_results_group_point_path(@point.group_id), :class => 'btn' %>

</div>
